<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="SmallSp">


    <LinearLayout
        android:id="@+id/login_text_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/login_text_country"
            layout="@layout/include_country_switch"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:paddingTop="9dp"
            android:visibility="gone"
            tools:visibility="visible" />

        <View
            android:id="@+id/login_country_line"
            android:layout_width="1dp"
            android:layout_height="12dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/xz_e0e0e0" />


        <EditText
            android:id="@+id/login_text_edit"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:background="@null"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:layout_gravity="center_vertical"
            android:singleLine="true"
            android:textColorHint="@color/xz_cccccc"
            android:textSize="14sp"
            tools:hint="Hello world" />

        <View
            android:id="@+id/login_code_line"
            android:layout_width="1dp"
            android:layout_height="12dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:background="@color/xz_212121"
            android:visibility="gone"
            tools:visibility="visible" />


        <TextView
            android:id="@+id/login_text_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:includeFontPadding="false"
            android:layout_gravity="center_vertical"
            android:minWidth="80dp"
            android:textColor="@color/xz_212121"
            android:textSize="14sp"
            android:visibility="gone"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/login_text_image"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:gravity="start"
            android:layout_gravity="center_vertical"
            android:visibility="gone"
            tools:visibility="visible" />

    </LinearLayout>

</RelativeLayout>